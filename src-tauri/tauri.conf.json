{
  "package": {
    "productName": "Tauthy",
    "version": "0.2.6"
  },
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.pwltr.tauthy",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "GPL-3.0",
      "category": "Utility",
      "shortDescription": "Tauthy",
      "longDescription": "A cross-platform TOTP authentication client built with tauri",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE3MERFQUNBN0E3RUI2QjEKUldTeHRuNTZ5dW9ORjJTcTBhUFQrVU5ocUNuRVBMSkMxcXJsTS9qRnFjeGs5U1FjMWJMRmVheGwK",
      "endpoints": ["https://github.com/pwltr/tauthy/releases/latest/download/latest.json"]
    },
    "allowlist": {
      "all": false,
      "clipboard": {
        "writeText": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      },
      "shell": {
        "execute": false,
        "open": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "writeFile": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "scope": ["$DATA/**"]
      },
      "window": {
        "minimize": true
      }
    },
    "windows": [
      {
        "title": "Tauthy",
        "width": 380,
        "height": 700,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' style-src: 'unsafe-inline'"
    }
  }
}
